<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Books for You</title>
<style>
    body {
        background-color: #f0f0f0; /* Grey background */
        font-family: Arial, sans-serif;
        color: #ffffff; /* White text */
        padding: 20px;
    }
    h2 {
        cursor: pointer;
        background-color: #333; /* Dark grey for titles */
        padding: 10px;
        margin: 5px 0;
    }
    p {
        display: none; /* Initially hide paragraphs */
        padding: 10px;
        background-color: #666; /* Medium grey for text */
    }
</style>
</head>
<body>
    <h1>Books for You</h1>
    <h2 onclick="toggleText('book1')">Chapter 1</h2>
    <p id="book1">Insert your text for Chapter 1 here.</p>

    <h2 onclick="toggleText('book2')">Chapter 2</h2>
    <p id="book2">Insert your text for Chapter 2 here.</p>

    <script>
        function toggleText(bookId) {
            var text = document.getElementById(bookId);
            if (text.style.display === "none") {
                text.style.display = "block";
            } else {
                text.style.display = "none";
            }
        }
    </script>
</body>
</html>
